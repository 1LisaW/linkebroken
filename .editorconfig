# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4

[*.css]
indent_size = 4

[*.scss]
indent_size = 4

[*.json]
indent_size = 4

[package.json]
indent_size = 2

[*.html]
indent_size = 4

[*.js]
indent_size = 4

[*.jsx]
indent_size = 4

[Jenkinsfile]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
